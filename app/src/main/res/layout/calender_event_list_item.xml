<LinearLayout android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:id="@+id/tonotificationitemm"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_weight="80"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_height="wrap_content">





        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:src="@drawable/events_icon"
            android:background="@drawable/shadow"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            >




            <TextView
                android:id="@+id/txtEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_regular"
                android:layout_gravity="left"
                android:text="Boys club get together"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/txtEventDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/grey_900"
                android:fontFamily="@font/raleway_regular"
                android:text="Meet up with the boys ar GCM"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtEventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/grey_900"
                android:fontFamily="@font/raleway_regular"
                android:text="15:00-19:00"
                android:textSize="12sp" />




        </LinearLayout>



    </LinearLayout>


