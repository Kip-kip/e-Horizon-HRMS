<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edittextbg">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:elevation="0.0dip"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_toolbar"
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/kq"/>





            <ImageView
                android:id="@+id/profileimage"
                android:layout_width="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:src="@drawable/ic_notifications_black_24dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/imageView_navigator_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">



                    <ImageView
                        android:id="@+id/notifications"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/hrmslogo"/>

                </LinearLayout>
            </LinearLayout>





        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/curved_down_layout"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="-150dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/curve_alledges_white"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginBottom="@dimen/spacing_medium"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_420sdp"
                        android:background="@drawable/curve_alledges_white"
                        android:orientation="vertical">




                        <LinearLayout
                            android:id="@+id/tonotificationitemm"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">





                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_gravity="center"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="2dp"
                                android:src="@drawable/ava"
                                />




                                <TextView
                                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:fontFamily="@font/raleway_regular"
                                    android:text="John Doe"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/_13sdp"
                                    android:textStyle="bold" />

                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/raleway_regular"
                                android:text="doejohn@blk.com"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/raleway_regular"
                                android:text="254712835617"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_12sdp" />





                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/grey_300"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_height="1dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/spacing_middle"
                            android:paddingTop="@dimen/spacing_middle">


                            <LinearLayout
                                android:id="@+id/toprofileitem"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/spacing_xxlarge"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_medium"
                                android:paddingRight="@dimen/spacing_medium">

                                <ImageButton
                                    android:layout_width="34dp"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/green_500"
                                    app:srcCompat="@drawable/ic_account_circle_black_24dp" />



                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/raleway_regular"
                                    android:text="Personal Details"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"/>



                                <ImageButton
                                    android:id="@+id/logoutimg"
                                    android:layout_width="@dimen/spacing_xmlarge"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/grey_40"
                                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />




                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/spacing_middle">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/spacing_xxlarge"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_medium"
                                android:paddingRight="@dimen/spacing_medium">

                                <ImageButton
                                    android:layout_width="34dp"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/green_500"
                                    app:srcCompat="@drawable/ic_format_list_numbered_black_24dp" />



                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Important Numbers"
                                    android:fontFamily="@font/raleway_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black" />




                                <ImageButton
                                    android:id="@+id/logoutimg"
                                    android:layout_width="@dimen/spacing_xmlarge"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/grey_40"
                                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />




                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/spacing_middle">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/spacing_xxlarge"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_medium"
                                android:paddingRight="@dimen/spacing_medium">

                                <ImageButton
                                    android:layout_width="34dp"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/green_500"
                                    app:srcCompat="@drawable/ic_business_center_black_24dp" />



                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/raleway_regular"
                                    android:text="My Qualifications"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    />





                                <ImageButton
                                    android:id="@+id/logoutimg"
                                    android:layout_width="@dimen/spacing_xmlarge"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/grey_40"
                                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />



                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/spacing_middle">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/spacing_xxlarge"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_medium"
                                android:paddingRight="@dimen/spacing_medium">

                                <ImageButton
                                    android:layout_width="34dp"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/green_500"
                                    app:srcCompat="@drawable/ic_people_black_24dp" />



                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="My Dependents"
                                    android:fontFamily="@font/raleway_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    />



                                <ImageButton
                                    android:id="@+id/logoutimg"
                                    android:layout_width="@dimen/spacing_xmlarge"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/grey_40"
                                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />





                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/spacing_middle">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/spacing_xxlarge"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_medium"
                                android:paddingRight="@dimen/spacing_medium">

                                <ImageButton
                                    android:layout_width="34dp"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/green_500"
                                    app:srcCompat="@drawable/ic_business_center_black_24dp" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/raleway_regular"
                                    android:text="My Service Record"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                     />



                                <ImageButton
                                    android:id="@+id/logoutimg"
                                    android:layout_width="@dimen/spacing_xmlarge"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:background="@android:color/transparent"
                                    android:tint="@color/grey_40"
                                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />




                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>