<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:id="@+id/cardbody"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_10sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            >




            <TextView
                android:id="@+id/txtLeaveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="@font/raleway_regular"
                android:layout_gravity="center"
                android:text="Annual Leave"
                android:textSize="15sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgcircle"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:translationZ="2dp"
                android:background="@drawable/shadoww"
                app:civ_border_color="@color/leavecardbgcolor"
                app:civ_border_width="0dp" />


            <TextView
                android:id="@+id/txtEventDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/grey_900"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/raleway_regular"
                android:text="Entitled: 50"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtEventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/grey_900"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/raleway_regular"
                android:text="Balance: 19"
                android:textSize="14sp" />




        </LinearLayout>




    </LinearLayout>

</LinearLayout>

