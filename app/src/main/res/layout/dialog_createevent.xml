<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large">



        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Create new event"
                android:fontFamily="@font/raleway_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_90"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:background="@color/grey_10" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_large">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_title_black_24dp"/>

        <EditText
            android:id="@+id/txtETitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_3"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:hint="Event title"
            android:padding="@dimen/spacing_middle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_large">

        <ImageView
            android:id="@+id/ImgStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_access_time_black_24dp"/>

        <EditText
            android:id="@+id/txtEStartDate"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/grey_3"
            android:gravity="top"
            android:editable="false"
            android:hint="Start"
            android:padding="@dimen/spacing_middle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_large">
        <ImageView
            android:id="@+id/ImgEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_access_time_black_24dp"/>

        <EditText
            android:id="@+id/txtEEndDate"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/grey_3"
            android:gravity="top"
            android:editable="false"
            android:hint="End"
            android:padding="@dimen/spacing_middle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_large">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_title_black_24dp"/>

        <EditText
            android:id="@+id/txtEVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_3"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:hint="Venue"
            android:padding="@dimen/spacing_middle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_large">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_title_black_24dp"/>

        <EditText
            android:id="@+id/txtEType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_3"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:hint="Event type"
            android:padding="@dimen/spacing_middle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCancel"
            android:background="@drawable/bg_btn_round_red"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:gravity="center"
            android:text="Cancel"
            android:fontFamily="@font/raleway_regular"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#fff"

            />

        <Button
            android:id="@+id/btnSubmit"
            android:background="@drawable/bg_btn_round_green"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:gravity="center"
            android:text="Create"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#fff"

            />

        <Button
            android:id="@+id/btnUpdate"
            android:background="@drawable/bg_btn_round_green"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:gravity="center"
            android:text="Update"
            android:fontFamily="@font/raleway_regular"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="#fff"

            />


    </LinearLayout>

</LinearLayout>